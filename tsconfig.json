{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "tthingk-utils/api": ["./api/index.ts"]
    },
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
